<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >
		
		<Button android:layout_width = "wrap_content" 
			android:layout_height="wrap_content" 
			android:id="@+id/homeview_paclogo"
			android:background="@drawable/pac_logo" />
    
    </LinearLayout>
    
    <LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="300px"
		android:gravity="center"
		android:background="@color/white">
		
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
		
			<Button android:layout_width = "wrap_content" 
				android:layout_height="wrap_content" 
				android:id="@+id/play"
				android:background="@drawable/play_s" />
			
			<TextView android:id="@+id/plain"
	 			android:text="                   "
	 			android:layout_width="wrap_content"
	 			android:layout_height="wrap_content"
			/>
			
			<Button android:layout_width = "wrap_content" 
				android:layout_height="wrap_content"
				android:id="@+id/guide"
				android:background="@drawable/red_ghost" />
			
		</LinearLayout>
		
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
				
			<TextView android:id="@+id/plain"
	 			android:text="    Play                      Guide  "
	 			android:textSize="18px"
	 			android:textStyle="bold"
	 			android:textColor="@color/black"
	 			
	 			android:layout_width="wrap_content"
	 			android:layout_height="wrap_content"
			/>
		</LinearLayout>
		
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="18px">
		
			<Button android:layout_width = "wrap_content" 
				android:layout_height="wrap_content" 
				android:id="@+id/mazes"
				android:background="@drawable/mazes_clicked" />
			
			<TextView android:id="@+id/plain"
	 			android:text="                   "
	 			android:layout_width="wrap_content"
	 			android:layout_height="wrap_content" />
	 			
	 		<Button android:layout_width = "wrap_content" 
				android:layout_height="wrap_content"
				android:id="@+id/scoregraph"
				android:background="@drawable/score_graph_clicked" />
	 			
		</LinearLayout>
		
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
				
			<TextView android:id="@+id/plain"
	 			android:text="      Mazes              Score Graph"
	 			android:textSize="18px"
	 			android:textStyle="bold"
	 			android:textColor="@color/black"
	 			
	 			android:layout_width="wrap_content"
	 			android:layout_height="wrap_content"
			/>
		</LinearLayout>
			
    </LinearLayout>
    
    <LinearLayout
    	android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:gravity="center" >
		
    	<Button android:layout_width = "wrap_content" 
			android:layout_height="wrap_content"
			android:id="@+id/bottom_logo"
			android:background="@drawable/bottom_logo" />
    </LinearLayout>
    
    
    
</LinearLayout>
