<!-- Demonstrates use of the com.google.android.maps.MapView.
     See corresponding Java code com.ghostrun.activity.GameMapView.java. -->
     


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
    
    <LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >
		
		<Button android:layout_width = "wrap_content" 
			android:layout_height="wrap_content" 
			android:id="@+id/mapview_paclogo"
			android:background="@drawable/pac_log_clicked" />
	
	</LinearLayout>
	
	<FrameLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="@color/white">
    	
    	<com.google.android.maps.MapView
    		android:id="@+id/mapview"
        	android:layout_width="fill_parent" 
        	android:layout_height="440px"
        	android:enabled="true"
        	android:clickable="true"
        	android:apiKey="0z-SInnYFdnTCruVFdCbWgdCdkZlGiWywdpUKbA" />
            <!-- To add your Google Maps API key, create a file in res/values
                 called keys.xml with the following content:
<?xml version="1.0" encoding="utf-8"?>
<resources>
	<string name="mapsApiKey">YOUR_API_KEY_GOES_HERE</string>
</resources>
            -->
            
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="0px">
  			<Button android:id="@+id/select" android:layout_width="100px" android:layout_height="wrap_content" android:layout_marginLeft="30px" android:layout_weight="1.0" android:textSize="12sp" android:text="Select On" /> 
		</LinearLayout>
		
			
	</FrameLayout>
       
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:gravity="center_vertical"
		android:paddingLeft="10px">
		
		<TextView
			android:id="@+id/points"
 			android:text="0 points"
 			android:textStyle="bold"
 			android:textColor="@color/white"
 			android:textSize="25px"
 			android:layout_width="wrap_content"
 			android:layout_height="wrap_content" />

	</LinearLayout>
	
</LinearLayout>

